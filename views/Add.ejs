<%- include('components/header.ejs') %>
<body>
    <div class="add">
      <form >

        <div class="row mb-3">
          <label for="inputEmail3" class="col-sm-2 col-form-label">Title : </label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="inputEmail3" name="title">
          </div>
        </div>

        <div class="row mb-3">
          <label for="inputEmail3" class="col-sm-2 col-form-label">Type :</label>
          <div class="col-sm-10">
            <select  class="form-control" id="inputEmail3">
              <option value="choose">Choose</option>
              <option value="mostImp">Most Important</option>
              <option value="medium">Medium</option>
              <option value="easy">Easy</option>
            </select>
          </div>
        </div>

        <div class="row g-3 datecont">
          <div class="col-sm-7 date">
            <label for="start_date" class="col-sm-2 col-form-label">Start-Date:</label>
            <input type="date" class="form-control" placeholder="City" aria-label="City" id="start_date">
          </div>

          <div class="col-sm date">
            <label for="end-date" class="col-sm-2 col-form-label">End-Date</label>
            <input type="date" class="form-control" placeholder="City" aria-label="City" id="end-date">         
           </div>
        </div>

        <div class="row mb-3">
          <label for="inputEmail3" class="col-sm-2 col-form-label">Add Files :</label>
          <div class="col-sm-10">
            <input type="file" class="form-control" id="inputEmail3">
          </div>
        </div>

        <div class="row mb-3 phase">
          <label for="inputEmail3" class="col-sm-2 col-form-label">Add tasks :</label>
          <div class="col-sm-10" id="formfield">
            <input type="text" class="form-control" id="inputEmail3" placeholder="add phase">
          </div>
          <div class="addtask" onclick="add()"><i class="fa fa-plus"> </i> Add</div>
          <div class="addtask" onclick="remove()"><i class="fa fa-minus"></i> Remove</div>
        </div>
       
        <button type="submit" class="btn">Add Project</button>

      </form>
    </div>
    <script src="js/add.js"></script>
</body>